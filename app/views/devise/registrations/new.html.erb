<div id="login">
  <div class="container">
    <div id="login-row" class="row justify-content-center align-items-center">
      <div id="login-column" class="col-md-6">
        <div id="signup-box" class="col-md-12">
          <%= devise_error_messages! %>
          <% flash.each do |key, value| %>
            <div class="flash <%= key %>"><%= value %></div>
          <% end %>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <h3 class="text-center text-info">Signup</h3>
            <div class="form-group">
              <%= f.label :name, class: "text-info" %><br />
              <%= f.text_field :name, autofocus: true, id: "username", class: "form-control", 
                required: true %>
            </div>
            <div class="form-group">
              <%= f.label :email, class: "text-info" %><br />
              <%= f.email_field :email, autofocus: true, autocomplete: "email", id: "username", 
                class: "form-control", required: true %> 
            </div>
            <div class="form-group">
              <%= f.label :password, class: "text-info" %><br />
              <%= f.password_field :password, autocomplete: "current-password", id: "password", 
                class: "form-control", required: true %>
            </div>
            <div class="form-group">
              <%= f.label :password_confirmation, class: "text-info" %><br />
              <%= f.password_field :password_confirmation, autocomplete: "new-password", id: "password", 
                class: "form-control", required: true %>
            </div>
            
            <div class="col-md-12 pull-right">
              <%= link_to "Login here", new_user_session_path, class: "text-info float-right" %>
            </div>
            
            <br>
            <div class="form-group">
              <%= f.submit "Sign up", class: "btn btn-info btn-md btn-block" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
