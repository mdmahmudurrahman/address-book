<div class="position-relative overflow-hidden p-3 p-md-5 m-md-3 text-center bg-light">
  <div class="col-md-5 p-lg-5 mx-auto my-5">
    <h1 class="display-8 font-weight-normal">Demo Address Book App</h1>
    <% if user_signed_in? %>
      <p class="lead font-weight-normal">
        <%= link_to "Add your contact addresses", dashboard_contact_addresses_path, 
          class: "btn btn-link" %>
      </p>
    <% else %>
      <p class="lead font-weight-normal">Signup to add as much address you want!</p>
      <%= link_to "Signup", new_user_registration_path, class: "btn-get-started btn btn-info" %>
    <% end %>
  </div>
  <div class="product-device box-shadow d-none d-md-block"></div>
  <div class="product-device product-device-2 box-shadow d-none d-md-block"></div>
</div>
